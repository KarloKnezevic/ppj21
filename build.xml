<?xml version='1.0' encoding='utf-8'?>
<project name="PPJprojekt21">
	<path id="cupclasspath">
		<fileset file="${basedir}/lib/java-cup-11a.jar"/>
	</path>

	<taskdef name="cup" classname="java_cup.anttask.CUPTask" classpathref="cupclasspath"/>
		
	<target name="clean">
	   <delete quiet="true" includeEmptyDirs="true" failonerror="false">
	      <fileset dir="${src.dir}"/>
	    </delete>
	</target>
	
	<target name="cup">
		<cup
			srcfile="src/hr/fer/ppj21/labos/parser/Parser.cup"
		  	destdir="${basedir}/src"
			expect="150"
		/>
	</target>


</project>